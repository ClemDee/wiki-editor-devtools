    <property>
      <code>define(['SyntaxHighlighting_cm/lib/codemirror',
        'SyntaxHighlighting_cm/addon/hint/javascript-hint'
       ], function(CodeMirror) {
  return function (editor) {
    // console.log('javascript autocomplete wrapper for javascript-hint.js called!')
    // By default, the javascript-hint.js library does not sort the results. We execute the default code and then sort the results before returining it to the showHint module.
    var result = CodeMirror.hint.javascript.apply(this, arguments);
    result.list.sort(function(x, y) {
      var a = String(x).toUpperCase();
      var b = String(y).toUpperCase();
      if (a &gt; b)
        return 1;
      if (a &lt; b)
        return -1;
      return 0;
    });

    return result;
  }
});</code>
